{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es6.json"],
  "env": {"es2020": true},
  "parserOptions": {"ecmaVersion": 11},
  "overrides": [
    {
      "files": ["*.md"],
      "rules": {
        "max-len": ["off"],
        "no-undef": ["off"],
        "no-unused-vars": ["off"]
      }
    },
    {
      "files": ["index.js"],
      "globals": {"Deno": "readonly", "Symbol": "readonly"},
      "rules": {
        "multiline-comment-style": ["off"]
      }
    }
  ]
}
